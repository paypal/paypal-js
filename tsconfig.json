{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "strict": true,

        // these are overridden by the Rollup plugin
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": ["src", "types"]
}
