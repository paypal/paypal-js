{
    "name": "@paypal/react-paypal-js",
    "version": "4.0.3",
    "description": "React components for the PayPal JS SDK",
    "keywords": [
        "react",
        "component",
        "paypal",
        "checkout",
        "payment",
        "payment buttons",
        "paypal javascript sdk"
    ],
    "main": "dist/react-paypal.node.js",
    "module": "dist/react-paypal.esm.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rollup --config",
        "format": "prettier --write .",
        "lint": "eslint .",
        "test": "jest",
        "start": "npm run storybook",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "deploy-storybook": "storybook-to-ghpages",
        "release": "node ./scripts/publish",
        "release:patch": "node ./scripts/publish patch",
        "release:minor": "node ./scripts/publish minor",
        "release:major": "node ./scripts/publish major",
        "typecheck": "tsc --noEmit",
        "validate": "npm run typecheck && npm run build && npm run lint && npm test -- --coverage"
    },
    "files": [
        "dist"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git://github.com/paypal/react-paypal-js.git"
    },
    "dependencies": {
        "@paypal/paypal-js": "^2.1.6",
        "@paypal/sdk-constants": "^1.0.86"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.7",
        "@rollup/plugin-babel": "^5.2.3",
        "@rollup/plugin-node-resolve": "^11.1.1",
        "@rollup/plugin-replace": "^2.3.4",
        "@rollup/plugin-typescript": "^8.1.1",
        "@storybook/addon-actions": "^6.1.16",
        "@storybook/addon-essentials": "^6.1.16",
        "@storybook/addon-links": "^6.1.16",
        "@storybook/react": "^6.1.16",
        "@storybook/storybook-deployer": "^2.8.7",
        "@testing-library/react": "^11.2.5",
        "@types/react": "^17.0.0",
        "babel-jest": "^26.6.3",
        "babel-loader": "^8.2.2",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-react": "^7.22.0",
        "http-server": "^0.12.3",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-is": "^17.0.1",
        "rollup": "^2.38.4",
        "shelljs": "^0.8.4",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "react": ">=16.3.0",
        "react-dom": ">=16.3.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint"
        ],
        "*.{json,css,html,md}": [
            "prettier --write"
        ]
    }
}
