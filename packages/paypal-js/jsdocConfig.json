{
    "source": {
        "include": ["./types/v6/"],
        "includePattern": "\\.(d.ts)$"
    },
    "opts": {
        "destination": "./v6-docs/",
        "recurse": true,
        "readme": "./v6-docs/README.md",
        "template": "../../node_modules/better-docs"
    },
    "plugins": [
        "plugins/markdown",
        "../../node_modules/better-docs/typescript"
    ],
    "tags": {
        "allowUnknownTags": ["optional"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "markdown": {
        "parser": "gfm"
    }
}
