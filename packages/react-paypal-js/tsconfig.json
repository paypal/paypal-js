{
    "compilerOptions": {
        "declaration": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "strict": true,
        "skipLibCheck": true,

        // these are overridden by the Rollup plugin
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src", "./jest.setup.ts"]
}
