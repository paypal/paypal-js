{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "es5",
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "../../types": ["./src/types"],
            "@paypal/paypal-js": ["./node_modules/@paypal/paypal-js"]
        }
    },
    "references": [
        { "path": "./tsconfig.lib.json" },
        { "path": "./tsconfig.test.json" }
    ]
}
