{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "node16",
        "moduleResolution": "node16",
        "target": "esnext",
        "strict": true,
        "skipLibCheck": true,
        "ignoreDeprecations": "6.0"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
