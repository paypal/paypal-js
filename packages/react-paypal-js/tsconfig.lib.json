{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "ignoreDeprecations": "6.0"
    },
    // these are overridden by the Rollup plugin
    "outDir": "./dist",
    "rootDir": "./src",
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
